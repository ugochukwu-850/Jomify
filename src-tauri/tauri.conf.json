{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Jomo App",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "notification": {
        "all": true
      },
      "shell": {
        "all": true,
        "execute": true,
        "sidecar": true,
        "open": true,
        "scope": [{ "name": "bin/ffmpeg", "sidecar": true, "args": true }]
      },
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://*", "http://*"]
      },
      "path": {
        "all": true
      }
    },

    "windows": [
      {
        "title": "Jomify",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": "default-src * 'unsafe-inline' 'unsafe-eval' data: blob:;"
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.tauri.prod",
      "category": "Music",
      "publisher": "Ugochukwu Chizaram",
      "externalBin": ["bin/ffmpeg"],
      "icon": [
        "icons/jomo.png"
      ]
    }
  }
}
